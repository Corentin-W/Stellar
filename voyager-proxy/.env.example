# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Voyager Connection
VOYAGER_HOST=192.168.1.100
VOYAGER_PORT=5950
VOYAGER_INSTANCE=1

# Voyager Authentication
VOYAGER_AUTH_ENABLED=true
VOYAGER_USERNAME=admin
VOYAGER_PASSWORD=your_password_here

# Heartbeat & Timeouts
HEARTBEAT_INTERVAL=5000
CONNECTION_TIMEOUT=15000
RECONNECT_DELAY=5000
MAX_RECONNECT_ATTEMPTS=10

# API Security
API_KEY=your_secret_api_key_here
CORS_ORIGIN=http://localhost
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# WebSocket
WS_CORS_ORIGIN=http://localhost
WS_PING_INTERVAL=25000
WS_PING_TIMEOUT=60000

# Logging
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Dashboard Mode
ENABLE_DASHBOARD_MODE=true
DASHBOARD_UPDATE_INTERVAL=2000

# Storage (for images cache)
CACHE_DIR=/tmp/voyager-cache
MAX_CACHE_SIZE_MB=500

# Monitoring
ENABLE_METRICS=true
METRICS_INTERVAL=60000

# Laravel Integration
LARAVEL_API_URL=http://localhost:8000
VOYAGER_WEBHOOK_SECRET=your_webhook_secret_here
